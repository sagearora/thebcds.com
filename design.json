            ],
            "evidence": [
                "turn1view0:L689-L721"
            ]
        },
        {
            "id": "testimonials_award",
            "layout": "carousel/strip of quotes followed by award badge block",
            "animations": [
                "quote cards slide-in",
                "badge pulse/hover wobble"
            ],
            "evidence": [
                "turn1view0:L723-L746"
            ]
        },
        {
            "id": "tickets",
            "layout": "two cards side-by-side",
            "animations": [
                "card hover lift",
                "cta micro-bounce on hover"
            ],
            "evidence": [
                "turn1view0:L746-L766"
            ]
        },
        {
            "id": "resources",
            "layout": "3 resource tiles",
            "animations": [
                "tile reveal on scroll",
                "underlines draw on hover"
            ],
            "evidence": [
                "turn1view0:L766-L773"
            ]
        },
        {
            "id": "countdown_marquee",
            "layout": "multi-row repeating ticker ribbon",
            "animations": [
                "continuous marquee loop"
            ],
            "evidence": [
                "turn1view0:L774-L780"
            ]
        },
        {
            "id": "cta_banner",
            "layout": "full-bleed media with centered stack and ticket CTA",
            "animations": [
                "content fade-up",
