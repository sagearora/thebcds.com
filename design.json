            ],
            "evidence": [
                "turn1view0:L782-L797"
            ]
        },
        {
            "id": "footer",
            "layout": "newsletter link + tag-cloud sitemap + tiny legal + credit",
            "animations": [
                "links underline-on-hover",
                "soft fade on appear"
            ],
            "evidence": [
                "turn1view0:L798-L818"
            ]
        }
    ],
    "interaction_states": {
        "focus": {
            "ring": "2px solid currentColor; offset 2px",
            "contrast": "4.5:1 minimum"
        },
        "hover": {
            "buttons": "elevated shadow, slight upshift",
            "links": "underline expand or color to neon_lime"
        },
        "active": {
            "buttons": "translateY(0); shadow reduce"
        }
    },
    "layout_rules": {
        "section_headers": {
            "eyebrow": "uppercase, wide_ui tracking",
            "title": "display_section_clamp with tight tracking",
            "lead": "body_lg max-width 65ch"
        },
        "content_widths": {
            "narrow_ch": 55,
            "standard_ch": 70,
            "wide_px": 1200
        },
        "image_treatment": {
            "radius": "soft",
            "shadow": "card",
            "hover_zoom": "scale(1.02)"
        }
    },
    "accessibility": {
        "prefers_reduced_motion": "disable parallax & marquee; replace with fades",
        "video_controls": "provide play/pause and mute; default muted",
        "link_targets": "avoid target=_blank unless external; indicate with icon",
        "keyboard_nav": "trap focus in open menu; ESC closes"
    },
    "replication_guidelines": {
        "do": [
            "Use oversized, heavy display type and generous whitespace.",
            "Anchor sections with strong numerals and short, declarative headings.",
            "Use a neon accent sparingly for primary CTAs and badges.",
            "Drive the narrative with scrollytelling (reveal, count-up, marquee)."
        ],
        "avoid": [
            "Overusing gradients; keep surfaces solid and contrasty.",
            "Thin body fonts; maintain legibility against media.",
            "Busy hover effects; prioritize motion with purpose."
        ],
        "tech_stack_suggestion": [
            "GSAP + ScrollTrigger for reveals and counters",
            "Lenis (or smooth-scroll alternative)",
            "IntersectionObserver fallback for no-JS animation",
            "CSS @media (prefers-reduced-motion) guardrails"
        ]
    },
    "tokens_for_code": {
        "css_vars": {
            "--c-ink": "#0A0A0A",
            "--c-paper": "#FFFBF2",
            "--c-neon": "#E6FF3A",
            "--c-steel": "#2B2B2B",
            "--radius-card": "16px",
            "--radius-pill": "9999px",
            "--shadow-card": "0 8px 24px rgba(0,0,0,0.08)"
        }
    },
    "sources": [
        "Homepage content structure and copy evidence: ([mewsunfold.com][1])"
    ]
}